<h1>Listing types</h1>
<table>
  <tr>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>
 
<% @types.each do |type| %>
  <tr>
    <td><%= type.name %></td>
    <td><%= link_to 'Show', type_path(type) %></td>
    <td><%= link_to 'Edit', edit_type_path(type) %></td>
    <td><%= link_to 'Destroy', type_path(type),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
<%= link_to 'New type', new_type_path %>
</table>