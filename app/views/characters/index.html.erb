<h1>Listing characters</h1>
<table border=1>
  <tr>
    <th>Name</th>
    <th>Subtitle</th>
    <th>Text</th>
    <th>Global</th>
    <th>Type</th>
    <th>Cost</th>
    <th>Affiliation</th>
    <th>#</th>
    <th>Rarity</th>
    <th>Die limit</th>
    <th colspan="3"></th>
  </tr>
 
<% @characters.each do |character| %>
  <tr>
    <td><%= character.name %></td>
    <td><%= character.subtitle %></td>
    <td><%= character.text %></td>
    <td><%= character.global %></td>
    <td><%= character.type.name %></td>
    <td><%= character.cost %></td>
    <td><%= character.affiliation.name %></td>
    <td><%= character.collector_number %></td>
    <td><%= character.rarity.name %></td>
    <td><%= character.die_limit %></td>
    <td><%= link_to 'Show', character_path(character) %></td>
    <td><%= link_to 'Edit', edit_character_path(character) %></td>
    <td><%= link_to 'Destroy', character_path(character),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
<%= link_to 'New character', new_character_path %>
</table>